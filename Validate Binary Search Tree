/**
 * Definition for binary tree
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    bool isValidBST(TreeNode *root) {
        if(!root)   return true;
        return valid(root, 0, 0, false, false);
    }
private:
    bool valid(TreeNode *nd, int lower, int upper, bool left, bool right){
        if(left && nd->val<=lower || right && nd->val>=upper)   return false;
        return (!nd->left || valid(nd->left, lower, nd->val, left, true)) && 
                (!nd->right || valid(nd->right, nd->val, upper, true, right));
    }
};
